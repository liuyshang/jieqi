<?xml version="1.0" encoding="utf-8"?>

<!--二十四节气中每个节气的页面详解-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/RL_actionbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_actionbar">

        <ImageView
            android:id="@+id/actionbar_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:src="@drawable/btn_back" />

        <TextView
            android:id="@+id/actionbar_text_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/actionbar_btn_back"
            android:text="返回目录"
            android:textColor="#d9b38d"
            android:textSize="36sp" />

        <!-- text内容看情况显示-->
        <TextView
            android:id="@+id/actionbar_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="24节气"
            android:textColor="#d9b38d"
            android:textSize="42sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/RL_actionbar"
        android:background="@drawable/main_bg_activity">


        <RelativeLayout
            android:id="@+id/content_bg_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/content_bg_activity">


            <RelativeLayout
                android:id="@+id/RL_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp">

                <ImageView
                    android:id="@+id/content_image_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/content_image_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/content_image_icon"
                    android:layout_toRightOf="@id/content_image_icon" />

                <!-- 显示左边的文字-->

                <ScrollView
                    android:layout_width="520dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/content_image_icon"
                    android:layout_below="@id/content_image_icon"
                    android:layout_marginBottom="45dp"
                    android:layout_marginTop="60dp">

                    <com.anl.wxb.jieqi.widgets.JustifyTextView
                        android:id="@+id/content_text_left"
                        android:layout_width="520dp"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="15sp"
                        android:text=""
                        android:textColor="#333333"
                        android:textSize="24sp" />

                </ScrollView>


            </RelativeLayout>

            <!-- 中线 完成后需隐藏 -->
            <ImageView
                android:id="@+id/content_center"
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:background="#ffcc0e26"
                android:visibility="invisible" />

            <!-- 右边   位置需调整-->
            <RelativeLayout
                android:id="@+id/RL_right"
                android:layout_width="500dp"
                android:layout_height="match_parent"
                android:layout_alignLeft="@id/content_center"
                android:layout_marginTop="50dp">

                <!-- 显示 节气详解-->
                <TextView
                    android:id="@+id/content_text_xiangjie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="节气详解"
                    android:textColor="#0000ff"
                    android:textSize="25sp" />


                <com.anl.wxb.jieqi.widgets.MyScrollView
                    android:id="@+id/content_scrollview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@id/content_text_xiangjie"
                    android:layout_below="@id/content_text_xiangjie"
                    android:layout_marginBottom="45dp"
                    android:layout_marginTop="30dp"
                    android:scrollbars="none">

                    <com.anl.wxb.jieqi.widgets.JustifyTextView
                        android:id="@+id/content_text_right"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:lineSpacingExtra="15sp"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="#333333"
                        android:textSize="24sp" />

                </com.anl.wxb.jieqi.widgets.MyScrollView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RL_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@id/RL_right">

                <ImageView
                    android:id="@+id/content_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="320dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/content_progress" />

                <com.anl.wxb.jieqi.widgets.VerticalSeekBar
                    android:id="@+id/content_btn_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="320dp"
                    android:layout_marginTop="35dp"
                    android:max="100"
                    android:progress="100"
                    android:progressDrawable="@drawable/x_content_bar"
                    android:thumb="@drawable/x_thumb_bar"
                    android:thumbOffset="0dp" />

                <ImageView
                    android:id="@+id/content_btn_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/content_btn_progress"
                    android:src="@drawable/x_content_btn_up" />

                <ImageView
                    android:id="@+id/content_btn_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/content_btn_up"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/x_content_btn_down" />

            </RelativeLayout>


        </RelativeLayout>


        <Button
            android:id="@+id/content_page_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/x_page_left" />

        <!-- 显示页面右翻按钮    按钮的大小需调整-->
        <Button
            android:id="@+id/content_page_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/x_page_right" />

    </RelativeLayout>


</RelativeLayout>