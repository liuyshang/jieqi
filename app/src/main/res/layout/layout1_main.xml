                android:layout_marginTop="12dp"
                android:text="立夏"
                android:textColor="#dddbdb"
                android:textSize="30sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp">

            <ImageView
                android:id="@+id/main_image8"
