<?xml version="1.0" encoding="utf-8"?>

<!--二十四节气介绍-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/RL_actionbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_actionbar">

        <ImageView
            android:id="@+id/actionbar_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:src="@drawable/btn_back" />

        <TextView
            android:id="@+id/actionbar_text_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/actionbar_btn_back"
            android:text="返回上级"
            android:textColor="#d9b38d"
            android:textSize="36sp" />

        <!-- text内容看情况显示-->
        <TextView
            android:id="@+id/actionbar_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="廿四节气"
            android:textColor="#d9b38d"
            android:textSize="42sp" />

    </RelativeLayout>


    <!-- 界面背景图      位置需调整-->
    <RelativeLayout
        android:id="@+id/main_bg_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RL_actionbar"
        android:layout_centerHorizontal="true"
        android:background="@drawable/main_bg_activity">

        <android.support.v4.view.ViewPager
            android:id="@+id/main_viewpager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"></android.support.v4.view.ViewPager>


        <Button
            android:id="@+id/main_page_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/x_page_left" />

        <Button
            android:id="@+id/main_page_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/x_page_right" />

    </RelativeLayout>


</RelativeLayout>
